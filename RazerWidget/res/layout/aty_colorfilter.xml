<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <Button 
            android:id="@+id/btn_color_colorfilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="color"
            />
        
        <Button 
            android:id="@+id/btn_light_colorfilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="light"
            />
        
        <Button 
            android:id="@+id/btn_porter_colorfilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="porter"
            />
        
        
    </LinearLayout>
    
    
    
    
    <com.lucifer.razerlib.test.ColorFilterView
        android:id="@+id/cfv_colorfilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    

</LinearLayout>
