<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    
    <Button 
        android:id="@+id/btn_dragtop_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:text="下拉回弹可加载更多的recyclerview"
        android:textColor="@color/black_deep"
        android:textSize="16sp"
        />
    
    
    <Button 
        android:id="@+id/btn_viewpager_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:text="子项目为ViewPager的recyclerview"
        android:textColor="@color/black_deep"
        android:textSize="16sp"
        />
    
    
    
    <Button 
        android:id="@+id/btn_fragmentexample_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:text="各种刷新和加载更多的RecyclerView"
        android:textColor="@color/black_deep"
        android:textSize="16sp"
        />
    
    
    <Button 
        android:id="@+id/btn_animrefresh_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:text="自定义下拉上拉的RecyclerView"
        android:textColor="@color/black_deep"
        android:textSize="16sp"
        />
    
    

</LinearLayout>
