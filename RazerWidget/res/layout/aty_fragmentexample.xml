<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 上面的按钮 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <RelativeLayout 
            android:id="@+id/rl_firstfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            
            <TextView 
                android:id="@+id/tv_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="第一个"
                android:textColor="@color/black_deep"
                android:textSize="16sp"
                />
            
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_first"
                android:src="@drawable/sun"
                />
            
        </RelativeLayout>
        
        
        <RelativeLayout 
            android:id="@+id/rl_secondfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            
            <TextView 
                android:id="@+id/tv_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="第二个"
                android:textColor="@color/black_deep"
                android:textSize="16sp"
                />
            
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_second"
                android:src="@drawable/airplane"
                />
            
        </RelativeLayout>
        
        
        <RelativeLayout 
            android:id="@+id/rl_thirdfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            
            <TextView 
                android:id="@+id/tv_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="第三个"
                android:textColor="@color/black_deep"
                android:textSize="16sp"
                />
            
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_third"
                android:src="@drawable/headd"
                />
            
        </RelativeLayout>
        
        
    </LinearLayout>
    
    
    
    <!-- 下面的布局 -->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragmentexample"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
    </android.support.v4.view.ViewPager>
    
    
    
    
    

</LinearLayout>
