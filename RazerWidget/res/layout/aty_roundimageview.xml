<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res/com.lucifer.razerwidget">
    
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	     >
	    
	    <!-- 圆形图片 -->
	    <com.lucifer.razerlib.imageview.RoundImageView 
	        android:id="@+id/riv_imageview"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:src="@drawable/image"
	        />
	    
	    
	    <!-- 圆角图片 -->
	    <ImageView
	        android:id="@+id/iv_roundimageview"
	        android:layout_width="200dp"
	        android:layout_height="200dp"
	        android:layout_below="@id/riv_imageview"
	        android:layout_margin="20dp"
	        />
	    
	    
	</RelativeLayout>
    
    
</ScrollView>



