<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   	
   	<Button 
   	    android:id="@+id/btn_pullscroll_scrolllistgrid"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_margin="10dp"
   	    android:text="下拉回弹，上拉到顶部停留"
   	    />
   	
   	<Button 
   	    android:id="@+id/btn_multifragments_scrolllistgrid"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_margin="10dp"
   	    android:text="瀑布流、sortlistview、viewpager"
   	    />
   	
   	<Button 
   	    android:id="@+id/btn_refreshloadmore_scrolllistgrid"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_margin="10dp"
   	    android:text="各种下拉刷新、上拉加载更多"
   	    />

</LinearLayout>
