<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.lucifer.razerwidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- ToggleButton -->

    <com.lucifer.razerlib.imageview.togglebutton.ToggleButton
        android:id="@+id/tb_default_roundimageview"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        app:borderWidth="2dp"
        app:offBorderColor="#000"
        app:offColor="#ddd"
        app:onColor="#f00"
        app:spotColor="#00f" />

    <com.lucifer.razerlib.imageview.togglebutton.ToggleButton
        android:id="@+id/tb_roundimageview"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        app:alphaFactor="0.7"
        app:hover="true"
        app:rippleColor="@color/red_deep" />

    
    
    
    
    <!-- RippleView -->

    <com.lucifer.razerlib.imageview.RippleView
        android:id="@+id/rv_roundimageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_rippleview"
        android:gravity="center"
        android:padding="35dp"
        android:text="click me"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    
    
    <com.lucifer.razerlib.imageview.BezierView 
        android:id="@+id/bzv_radiogroup"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        />
    
    
    
    <!-- SegmentedRadioGroup -->

    <com.lucifer.razerlib.imageview.segmentedradiogroup.SegmentedRadioGroup
        android:id="@+id/segment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:checkedButton="@+id/button_one"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@id/button_one"
            android:button="@null"
            android:gravity="center"
            android:minHeight="33dip"
            android:minWidth="40dip"
            android:text="One"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black_deep" />

        <RadioButton
            android:id="@+id/button_two"
            android:button="@null"
            android:gravity="center"
            android:minHeight="33dip"
            android:minWidth="40dip"
            android:text="Two"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black_deep" />

        <RadioButton
            android:id="@+id/button_three"
            android:button="@null"
            android:gravity="center"
            android:minHeight="33dip"
            android:minWidth="40dip"
            android:text="Three"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black_deep" />
    </com.lucifer.razerlib.imageview.segmentedradiogroup.SegmentedRadioGroup>

    
    
    <com.lucifer.razerlib.imageview.segmentedradiogroup.SegmentedRadioGroup
        android:id="@+id/segment_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:checkedButton="@+id/button_add"
        android:orientation="horizontal" >

        <com.lucifer.razerlib.imageview.segmentedradiogroup.CenteredRadioImageButton
            android:id="@id/button_add"
            android:button="@android:drawable/ic_menu_add"
            android:minHeight="33dip"
            android:minWidth="40dip" />

        <com.lucifer.razerlib.imageview.segmentedradiogroup.CenteredRadioImageButton
            android:id="@+id/button_call"
            android:button="@android:drawable/ic_menu_call"
            android:minHeight="33dip"
            android:minWidth="40dip" />

        <com.lucifer.razerlib.imageview.segmentedradiogroup.CenteredRadioImageButton
            android:id="@+id/button_camera"
            android:button="@android:drawable/ic_menu_camera"
            android:minHeight="33dip"
            android:minWidth="40dip" />
    </com.lucifer.razerlib.imageview.segmentedradiogroup.SegmentedRadioGroup>

</LinearLayout>