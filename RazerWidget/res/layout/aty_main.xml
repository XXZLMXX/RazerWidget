<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RazerWidget-All widget are here"
            android:textColor="@color/green_deep"
            android:textSize="@dimen/text_size_20"
            android:padding="20dp"
            />
        
        <TextView 
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ScrollListGridView"
            android:padding="10dp"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        
        
        <TextView 
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="ImageView"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        <TextView 
            android:id="@+id/tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="ViewPager"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        <TextView 
            android:id="@+id/tv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Dialog/PopupWindow"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        <TextView 
            android:id="@+id/tv7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="进度条、进度环"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        <TextView 
            android:id="@+id/tv8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="年月日历"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        <TextView 
            android:id="@+id/tv9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="日期时间"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        
        <TextView 
            android:id="@+id/tv10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="级联菜单"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        <TextView 
            android:id="@+id/tv11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="左右滑动菜单控件"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        <TextView 
            android:id="@+id/tv12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="翻页"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        <TextView 
            android:id="@+id/tv13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="卫星菜单"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        <TextView 
            android:id="@+id/tv14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="图表报表"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        <TextView 
            android:id="@+id/tv15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        <TextView 
            android:id="@+id/tv16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="RecyclerView"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        <TextView 
            android:id="@+id/tv17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Test"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/text_size_16"
            />
        
        
    </LinearLayout>
    

</ScrollView>
